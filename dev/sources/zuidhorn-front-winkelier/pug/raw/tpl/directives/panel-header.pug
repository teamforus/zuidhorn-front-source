header.section.section-panel-header
    .wrapper
        .business-info
            .business-info-logo: img(ng-src="{{ $root.user.shop_keeper.preview || './assets/img/no-image-square.png' }}")
            .business-title
                .business-title-name(ng-bind="$root.user.shop_keeper.name")
                .business-title-actions
                    a(ui-sref="profile-edit").button.button-success.button-xs
                        em.mdi.mdi-settings
                        | Bewerk
                    a(ui-sref="sign-out").button.button-primary.button-xs
                        em.mdi.mdi-logout
                        | Loguit
            .business-details
                span
                    strong KvK-nummer: 
                    | {{ $root.user.shop_keeper.kvk_number }} 
                    span &nbsp;|&nbsp; 
                span
                    strong BTW-Nummer: 
                    span(ng-class="{'text-muted' : !$root.user.shop_keeper.btw_number}") 
                        | {{ $root.user.shop_keeper.btw_number || 'Geen data' }}
                    span &nbsp;|&nbsp; 
                span
                    strong IBAN:  
                    | {{ $root.user.shop_keeper.iban }} 
                br
                span
                    strong CategorieÃ«n: 
                    span(ng-repeat="category in $root.shopkeeper_categories track by $index")
                        | {{ category.name }}{{ $index < $root.shopkeeper_categories.length - 1 ? ', ' : '' }}
        .panel-header-nav
            a(ui-sref="panel-offices" ng-class="{'active': $root.$state.current.name == 'panel-offices'}").panel-header-nav-it 
                | Vestiging ({{ $root.count_offices }})
            a(ui-sref="panel-transactions" ng-class="{'active': $root.$state.current.name == 'panel-transactions'}").panel-header-nav-it 
                | Transacties ({{ $root.count_transactions }})