header.section.section-landing-header
    a.logo(ui-sref="landing")
        img(src="./assets/img/logo-dark.svg", alt="Logo")

div(auth-by-qr-code)

.section.section-download-app
    .wrapper
        .bg-text DOWNLOAD APP
    
        .download-row
            .download-col
                .download-inner
                    h1 
                        | De app is momenteel 
                        br 
                        | alleen beschikbaar voor iOS
                    a(href="https://itunes.apple.com/nl/app/kassa-forus/id1288917315?l=en&mt=8" target="_blank").button.button-app-store
                        em.mdi.mdi-apple
                        .button-body
                            span Download de app vanuit de
                            strong APP STORE
            .download-col
                img(src="./assets/img/ios-mockup.png")

.section.section-how-it-works
    .bg-image
    .how-it-works-inner
        h1#how-it-works.how-it-works-title Hoe het systeem werkt
        .how-it-works-list
            mixin how_it_works_item(icon, title, title_nth, text)
                .how-it-works-item 
                    em.how-it-works-item-icon: img(
                        src=(env_data.html5Mode.enable?env_data.html5Mode.basePath:'') + "assets/img/icon-steps/" + icon + ".png", alt="")
                    h4.how-it-works-item-heading
                        | #{title} 
                        span.text-primary #{title_nth}
                    | !{text}
    
            +how_it_works_item('icon-mob', 'Step', '#1', 'U download de app op uw telefoon en meld zich aan als winkelier.')
            +how_it_works_item('icon-web-check', 'Step', '#2', 'De gemeente zal uw aanvraag in behandelingen nemen. Zodra u bent gevalideerd ontvang u een bevestiging.')
            +how_it_works_item('icon-qr-code', 'Step', '#3', 'Vul uw winkeliers profiel in op deze website. U krijgt toegang tot uw profiel door boven aan deze pagina de QR-Code the scannen met de App.')
            +how_it_works_item('icon-login', 'Step', '#4', 'Nadat u uw profiel heeft ingevuld zal u worden toegevoegd als winkelier op de Kindpakket website.')
            +how_it_works_item('icon-funds', 'Step', '#5', 'Klanten zullen bij u langskomen en bij het afrekenen een QR-code presenteren. U kunt deze code met de app scannen en het te betalen bedrag afschrijven. Het geld zal automatisch worden bijgeschreven op uw bankrekening.')

.section.section-faq: .wrapper
    mixin faq_item(nth, title, message)
        .faq-ul-li
            .faq-ul-li-title(tabulation-tab=nth) 
                | #{title}
                em.mdi.mdi-chevron-down
                em.icon-active.mdi.mdi-chevron-up
            .faq-ul-li-content(tabulation-pane=nth) #{message}
    .faq
        .faq-heading Veel gestelde vragen
        .faq-ul(tabulation)
            +faq_item(1, 
                "Wanneer is de Android App beschikbaar?", 
                "De Android App is in ontwikkeling en zal begin 2018 beschikbaar zijn.")
            +faq_item(2, 
                "Hoe kan ik mij aanmelden als winkelier?", 
                "Neem contact op met de gemeente")
            +faq_item(3, 
                "De winkeliersapp doet het niet.", 
                "Neem contact op met de gemeente")
            +faq_item(4, 
                "De klant wil iets ruilen/retourneren. Kan dat?", 
                "U bepaalt zelf als winkelier of er iets geruild of geretourneerd kan worden.")
            +faq_item(5, 
                "Klant wil de voucher omruilen voor contant geld. Kan dat?", 
                "Nee, dat kan niet. ")
            +faq_item(6, 
                "Ik wil als ondernemer aansluiten bij het kindpakket. Hoe doe ik dat?", 
                "Neem contact op met de gemeente")
            +faq_item(7, 
                "Klant wil met de voucher spullen kopen voor volwassenen. Wat moet ik doen? ", 
                "U mag de klant daarop aanspreken. De voucher is bedoeld om spullen voor kinderen te kopen. ")
            +faq_item(8, 
                "De klant heeft onvoldoende budget om spullen te kopen. Wat nu? ", 
                "De klant mag altijd zelf het verschil bij betalen. ")
            +faq_item(9, 
                "Kan ik de voucher ook omruilen voor contant geld?", 
                "Nee, u krijgt de waarde van de voucher niet in contant geld uitbetaald.")
            +faq_item(10, 
                "Wanneer ontvang ik mijn geld?", 
                "Het bedrag van de gekochte spullen staat de volgende werkdag op uw rekening bijgeschreven. ")
            +faq_item(11, 
                "De klant brengt iets retour. Hoe kan ik dat bedrag aan de gemeente terugbetalen?", 
                "Met een ideal betaling betaalt u het bedrag terug of u maakt het bedrag over aan de gemeente Zuidhorn. ")
            +faq_item(12, 
                "Hoe lang is de voucher geldig?", 
                "De voucher is vanaf 1 november 2017 1 jaar geldig.")

