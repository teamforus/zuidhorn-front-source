div(panel-header)

.section.section-container: .wrapper 
    .section.section-title
        | Transaction ({{ $root.count_transactions }})
        
    div(ng-show="$ctrl.transactions.length > 0") 
        .section.section-panel
            .table-responsive: table.table.table-stripped
                thead: tr
                    th Datum
                    th Bedrag
                    th Status
                
                tbody
                    tr(ng-repeat="transaction in $ctrl.transactions")
                        td(ng-bind="transaction.created_at | pretty_date")
                        td
                            strong â‚¬ 
                            strong {{ transaction.amount | number_format:2 }}
                        td(ng-bind="{success: 'Succes', refund: 'Retour'}[transaction.status] || transaction.status")

    .section.section-panel(ng-show="$ctrl.transactions.length == 0")
        h4.text-center Geen transacties
